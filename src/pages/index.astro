---
import Layout from "../layouts/Layout.astro";
import HeroHome from "../components/HeroHome.astro";
import TextMarquee from "../components/TextMarquee.astro";
import GalleryText from "../components/GalleryText.astro";
import Faqs from "../components/Faqs.astro";
import StepsTimeline from "../components/StepsTimeline.astro";
import Plans from "../components/Plans.astro";
import Statements from "../components/Statements.astro";
import Introducing from "../components/Introducing.astro";
import GL from "../components/GL.astro";
import GLPlaces from "../components/GlPlaces.astro";
---

<Layout title="Home">
  <HeroHome
    title="Stunning Explainer AI Videos"
    subtitle={`Create 
      long videos in minutes with rich animations and effects while keeping price per video low.
    `}
    cta={{
      title: "Get Started",
      url: "#",
    }}
  />

  <Introducing
    title="Viewers get used to seeing the same old templates."
    text={`
      Other video creation platforms often focus on basic templates and simple editing tools, 
      which can lead to generic and uninspired content. In contrast, 
      our platform generates unique videos that can display an abstract concept with rich animations and in an engaging way.
    `}
    cta={{
      title: "Get Started",
      url: "#",
    }}
  />

  <StepsTimeline
    title="How it works"
    items={[
      {
        title: "Enter your video idea",
        text: "Describe the video you want to create, and our AI will generate a unique video based on your input.",
      },
      {
        title: "View the video",
        text: "Once the video is ready, you can watch it, share it, and download it for your projects.",
      },
      {
        title: "Edit everything",
        text: "Your can edit every aspect of the video, from the text and images to the animations and effects, to make it truly your own.",
      },
    ]}
  />

  <GalleryText
    title="Results speak for themselves"
    text="Take a look on some real world video examples"
    cta={{
      title: "Try It Today",
      url: "#",
    }}
    images={[
      {
        alt: "Dashboard overview",
        src: "/image-1.jpg",
        width: 6000,
        height: 4000,
      },
      {
        alt: "Project collaboration view",
        src: "/image-2.jpg",
        width: 2689,
        height: 4032,
      },
      {
        alt: "Analytics and reporting",
        src: "/image-3.jpg",
        width: 3734,
        height: 5359,
      },
    ]}
    marqueeTexts={[
      "Creative Firepower",
      "Price Per Video Low",
      "Trusted by Professionals",
      "Simple, Transparent Pricing",
    ]}
  />

  <Statements
    items={[
      {
        title: "AI-Powered Creation",
        text: "Our AI generates unique videos with rich animations based on your concept, not generic templates.",
      },
      {
        title: "Full Creative Control",
        text: "Edit every element of your video—from animations to effects—to match your vision perfectly.",
      },
      {
        title: "Fast & Affordable",
        text: "Create professional quality videos in minutes while keeping your cost per video low.",
      },
    ]}
  />

  <TextMarquee
    class="marquee"
    texts={[
      "AI-Powered Videos",
      "Rich Animations",
      "Full Editing Control",
      "Affordable Pricing",
    ]}
  />

  <Plans
    title="Plans & Pricing"
    subtitle="Start for free, upgrade when you’re ready. No hidden fees, no long-term commitments."
    items={[
      {
        title: "Free Plan",
        price: {
          amount: "$0",
          duration: "month",
        },
        link: {
          title: "Get Started Free",
          url: "#",
        },
        features: [
          { title: "Up to 50 accounts" },
          { title: "Unlimited projects" },
          { title: "Chat support", disabled: true },
          { title: "Email support", disabled: true },
          { title: "Custom onboarding", disabled: true },
        ],
      },
      {
        title: "Premium Plan",
        price: {
          amount: "$20",
          duration: "month",
        },
        link: {
          title: "Start 14-Day Trial",
          url: "#",
        },
        features: [
          { title: "Up to 50 accounts" },
          { title: "Unlimited projects" },
          { title: "Priority chat support" },
          { title: "Email support" },
          { title: "Custom onboarding assistance" },
        ],
      },
    ]}
  />

  <Faqs
    title="Frequently Asked Questions"
    mobileTitle="FAQs"
    subtitle="Quick answers to the most common questions."
    items={[
      {
        question: "How does the AI video generation work?",
        answer:
          "Simply describe your video concept, and our AI creates a unique video with rich animations and effects. You can then edit every element to match your vision.",
      },
      {
        question: "Can I edit the generated videos?",
        answer:
          "Absolutely. You have full control to edit text, images, animations, effects, and every other aspect of your video.",
      },
      {
        question: "What video formats do you support?",
        answer:
          "Videos can be exported in various formats optimized for different social media platforms including Instagram, TikTok, YouTube, and more.",
      },
      {
        question: "Can I change my plan at any time?",
        answer:
          "Yes. You can upgrade or downgrade your plan anytime with no penalties. Unused videos don't roll over to the next month.",
      },
      {
        question: "What happens if I exceed my monthly video limit?",
        answer:
          "You can either upgrade to a higher tier or purchase additional videos as needed. We'll notify you before you reach your limit.",
      },
    ]}
  />

  <GL />
  <GLPlaces />
</Layout>

<style>
  .marquee {
    padding: 2rem 0;
    z-index: 9;
  }
</style>
